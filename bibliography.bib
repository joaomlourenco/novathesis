@article{Urbanski2013,
abstract = {In the US, wildfires and prescribed burning present significant$\backslash$nchallenges to air regulatory agencies attempting to achieve and maintain$\backslash$ncompliance with air quality regulations. Fire emission factors (EF) are$\backslash$nessential input for the emission models used to develop wildland fire$\backslash$nemission inventories. Most previous studies quantifying wildland fire EF$\backslash$nof temperate ecosystems have focused on emissions from prescribed$\backslash$nburning conducted outside of the wildfire season. Little information is$\backslash$navailable on EF for wildfires in temperate forests of the conterminous$\backslash$nUS. The goal of this work is to provide information on emissions from$\backslash$nwildfire-season forest fires in the northern Rocky Mountains, US.$\backslash$nIn August 2011, we deployed airborne chemistry instruments and sampled$\backslash$nemissions over eight days from three wildfires and a prescribed fire$\backslash$nthat occurred in mixed conifer forests of the northern Rocky Mountains.$\backslash$nWe measured the combustion efficiency, quantified as the modified$\backslash$ncombustion efficiency (MCE), and EF for CO2, CO, and CH4. Our study$\backslash$naverage values for MCE, EFCO2, EFCO, and EFCH4 were 0.883, 1596 g$\backslash$nkg(-1), 135 g kg(-1), 7.30 g kg(-1), respectively. Compared with$\backslash$nprevious field studies of prescribed fires in temperate forests, the$\backslash$nfires sampled in our study had significantly lower MCE and EFCO2 and$\backslash$nsignificantly higher EFCO and EFCH4.$\backslash$nThe fires sampled in this study burned in areas reported to have$\backslash$nmoderate to heavy components of standing dead trees and down dead wood$\backslash$ndue to insect activity and previous fire, but fuel consumption data was$\backslash$nnot available. However, an analysis of MCE and fuel consumption data$\backslash$nfrom 18 prescribed fires reported in the literature indicates that the$\backslash$navailability of coarse fuels and conditions favorable for the combustion$\backslash$nof these fuels favors low MCE fires. This analysis suggests that fuel$\backslash$ncomposition was an important factor contributing to the low MCE of the$\backslash$nfires measured in this study.$\backslash$nThis study only measured EF for CO2, CO, and CH4; however, we used our$\backslash$nstudy average MCE to provide rough estimates of wildfire-season EF for$\backslash$nPM2.5 and four non-methane organic compounds (NMOC) using MCE and EF$\backslash$ndata reported in the literature. This analysis suggests the EFPM2.5 for$\backslash$nwildfires that occur in forests of the northern Rocky Mountains may be$\backslash$nsignificantly larger than those reported for temperate forests in the$\backslash$nliterature and that used in a recent national emission inventory. If the$\backslash$nMCE of the fires sampled in this work are representative of the$\backslash$ncombustion characteristics of wildfire-season fires in similar forest$\backslash$ntypes across the western US then the use of EF based on prescribed fires$\backslash$nmay result in an underestimate of wildfire PM2.5 and NMOC emissions.$\backslash$nGiven the magnitude of biomass consumed by western US wildfires, this$\backslash$nmay have important implications for the forecasting and management of$\backslash$nregional air quality.},
author = {Urbanski, S. P.},
