keywords = {Air mass factor,Chahine algorithm,Multiple axis DOAS,Radiative transfer,Trace gas vertical profile},
title = {{Daily evolution of atmospheric gas pollutants vertical profile in a coastal mediterranean area}},
year = {2007}
