\typeout{NT FILE FontStyles/calibri.sty}%

\ifxeorlua{}{%
  \ClassError{novathesis}{Font Style “calibri” is not compatible with pdfLaTeX. Please use LuaLaTeX}{Please use LuaLaTeX}%
}

\ntcheckfonts{Calibri}
            {Regular,Italic,Bold,BoldItalic}

\setmainfont{Calibri}[
  Path = \DIRFONTSTYLES/Fonts/,
  Extension = .ttf,
  Ligatures=TeX,
  Mapping=tex-text,
  UprightFont = *-Regular,
  ItalicFont = *-Italic,
  BoldFont = *-Bold,
  BoldItalicFont = *-BoldItalic,
]
