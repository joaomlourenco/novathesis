\ntcheckfonts{Arial}{Regular,Italic,Bold,BoldItalic}

\setmainfont{Arial}[
  Path = \DIRFONTSTYLES/Fonts/,
  Extension = .ttf,
  Ligatures=TeX,
  Mapping=tex-text,
  UprightFont=*-Regular,
  ItalicFont=*-Italic,
  BoldFont=*-Bold,
  BoldItalicFont=*-BoldItalic,
]
